########################################################################################################################
##                                                                                                                    ##
## package.yaml                                                                                                       ##
##                                                                                                                    ##
## @author: Luke Mills <luke@aligent.com.au>                                                                          ##
## @link:   http://www.aligent.com.au/                                                                                ##
##                                                                                                                    ##
## This file is used to configure the settings for building a Magento Connect package using n98-magerun.              ##
##                                                                                                                    ##
## This file is version 0.0 of the package.yaml format. It is very basic, and is intended to be fed directly into the ##
## Mage_Connect module with very little manipulation. Note the array formats are not the best for human consumption,  ##
## but are structured the way the Mage_Connect module needs them.                                                     ##
##                                                                                                                    ##
## In particular, the elements in the subsections of authors, contents, depends/extension, and depends/package        ##
## are supposed to correspond. Think of the subsections (e.g. email, name, user) as column headings, and the array    ##
## elememnts as the data.                                                                                             ##
##                                                                                                                    ##
## I expect that this format could be greatly improved.                                                               ##
##                                                                                                                    ##
## The package_yaml_version element can be used to prevent breaking changes in the future.                            ##
##                                                                                                                    ##
########################################################################################################################

package_yaml_version: '0.0'


## version_ids is an array of Magento Connect package formats to create
## 1 = Pre-1.5.0.0
## 2 = 1.5.0.0 & later
version_ids:
  - '2'

## Whether or not to create the tarball
## @todo: Move this into a command-line parameter
_create: '1'

##################
## Package Info ##
##################

name: Aligent_Helloworld
channel: community
summary: Summary...
description: Description...
license: OSL
license_uri: 'http://opensource.org/licenses/OSL-3.0'

file_name: Aligent_Helloworld

##################
## Release Info ##
##################

stability: stable
version: 1.0.0
notes: 'Here are some notes about the module.'

#############
## Authors ##
#############

authors:
  name:
    - 'Luke Mills'
  user:
    - 'luke'
  email:
    - luke@aligent.com.au

##################
## Dependencies ##
##################

depends_php_min: 5.0.0
depends_php_max: 6.0.0

depends:
  package:
    name:
      - ''
    channel:
      - ''
    min:
      - ''
    max:
      - ''
    ## Enclose files in double quotes, and delimit by backslash n (\n), e.g.: "file1\nfile2\nfile3"
    files:
      - ''
  extension:
    name:
      - Core
    min:
      - ''
    max:
      - ''

##############
## Contents ##
##############

## Note: each subsection must have matching array elements. See file docblock above.
contents:

  ## For target options, @see \Mage_Connect_Package_Target::_getTargetMap
  target:
    - magecommunity
    - mageetc

  ## Each path must omit the initial portion of the uri. This is provided by the target.
  ## @see \Mage_Connect_Package_Target::_getTargetMap
  path:
    - Aligent/Helloworld
    - modules/Aligent_Helloworld.xml

  ## type can either be 'file' or 'dir'. Directories are added recursively.
  type:
    - dir
    - file

  ## include and exclude must be valid regular expressions (e.g. '/*\.bak/'. They are passed directly into preg_match)
  ## @see \Mage_Connect_Package::addContentDir
  include:
    - ''
    - ''
  ignore:
    - ''
    - ''
